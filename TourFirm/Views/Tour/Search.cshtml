@{
    Layout = "_LayoutTour";
}

<div id="app">
    <section class="popular-block mt-3" v-if="popularTours != null">
        <div class="container">
            <h3><b>Популярные направления</b></h3>
            <div class="row mt-3">
                <div v-for="item in popularTours" class="col-lg-4 col-12 mt-3 mt-lg-0 d-flex justify-content-center">
                    <tourcomponent v-bind:tour=item></tourcomponent>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <a class="btn btn-outline-secondary" href="#">Все направления</a>
            </div>
        </div>
    </section>
    <section class="random-block mt-lg-5 mt-3" v-if="randomTours != null">
        <div class="container">
            <h3><b>Случайные направления</b></h3>
            <div class="row mt-3">
                <div v-for="item in randomTours" class="col-lg-4 col-12 mt-3 mt-lg-0 d-flex justify-content-center">
                    <tourcomponent v-bind:tour=item></tourcomponent>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <a class="btn btn-outline-secondary" href="#">Все направления</a>
            </div>
        </div>
    </section>
</div>

@section Scripts {

    <script src="~/scripts/HomeTour.js" asp-append-version="true"></script>

}
