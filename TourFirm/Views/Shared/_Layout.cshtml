<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ПРОСТО КЭМП - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/full-page-scroll.min.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/maincontent0.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/tours.css" rel="stylesheet" asp-append-version="true"/>
    <script src="js/full-page-scroll.min.js"></script>
    <script src="js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>
    <div class="d-block d-lg-none menu-mobile offcanvas offcanvas-start" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <a asp-controller="Home" asp-action="Index"><h5 class="offcanvas-title" id="offcanvasExampleLabel">ПРОСТО КЭМП</h5></a>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body text-center">
            <a asp-controller="Tour" asp-action="Index">
                <div class="p-2">
                    Онлайн туры
                </div>
            </a>
            <a asp-controller="Contacts" asp-action="Index">
                <div class="p-2">
                    Контакты
                </div>
            </a>
            <a asp-controller="Oferta" asp-action="Oferta">
                <div class="p-2">
                    Оферта
                </div>
            </a>
        </div>
    </div>
    <div id="main" class="scroll-container">
        @RenderBody()
    </div>

    <script type="text/javascript">
        new fullScroll({
            mainElement: "main",
            displayDots: true,
            dotsPosition: "right",
            animateTime: 0.7,
            animateFunction: "ease",
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
